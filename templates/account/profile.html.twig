{% extends 'base.html.twig' %}

{% block title %}Your Profile{% endblock %}

{% block body %}
    <p class="h1 text-secondary py-3">Account Profile</p>

    <table class="table">
        <tbody>
        <tr>
            <td>Name</td>
            <td>{{ account.name }}</td>
        </tr>
        <tr>
            <td>Lastname</td>
            <td>{{ account.lastname }}</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>{{ account.email }}</td>
        </tr>
        </tbody>
    </table>
    <a href="{{ path('app_account_edit', { "id" : account.id }) }}" class="btn btn-secondary my-3">Edit info</a>
    {% for post in posts %}
        <div class="border rounded mb-2">
            <div class="p-3 border-bottom border">
                <p class="h5 m-0"><a href="{{ path('app_account_profile', { 'slug' : post.author.slug }) }}">
                        {{ post.author }}
                    </a>
                </p>
            </div>
            <div class="py-1 px-3">
                <p class="h2">
                    {{ post.title }}
                </p>
            </div>
            <div class="pb-2 px-3">
                <p class="h6">
                    {{ post.text }}
                </p>
            </div>
        </div>
    {% endfor %}
{% endblock %}
