{% extends 'base.html.twig' %}

{% block title %}Your Profile{% endblock %}

{% block body %}
    <p class="h1 text-secondary py-3">Account Profile</p>

    <table class="table">
        <tbody>
        <tr>
            <td>Name</td>
            <td>{{ accountProfile.name }}</td>
        </tr>
        <tr>
            <td>Lastname</td>
            <td>{{ accountProfile.lastname }}</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>{{ accountProfile.email }}</td>
        </tr>
        </tbody>
    </table>
    <p>
        <a href="{{ path('app_account_edit', {"id" : accountProfile.id }) }}"
           class="btn btn-primary my-3">Edit Account</a>
    </p>
    <p>
        {% if blockSwitch %}
            <a href="{{ path('app_account_profile', {"slug" : accountProfile.slug, "blockSwitch" : blockSwitch }) }}"
               class="btn btn-primary my-3">Liked Posts</a>
        {% else %}
            <a href="{{ path('app_account_profile', {"slug" : accountProfile.slug, "blockSwitch" : blockSwitch }) }}"
               class="btn btn-primary my-3">Created Posts</a>
        {% endif %}
    </p>
    <div class="pt-3">
    {{ block("loadposts", "blocks/loadposts.html.twig") }}
    </div>
{% endblock %}
