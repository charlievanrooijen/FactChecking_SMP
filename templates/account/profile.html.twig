{% extends 'base.html.twig' %}

{% block title %}Your Profile{% endblock %}

{% block body %}
    <p class="h1 text-secondary py-3">Account Profile</p>

    <table class="table">
        <tbody>
        <tr>
            <td>{{ account.name }}</td>
        </tr>
        <tr>
            <td>{{ account.lastname }}</td>
        </tr>
        <tr>
            <td>{{ account.email }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_account_edit', { "id" : account.id }) }}">Edit info</a>
{% endblock %}
