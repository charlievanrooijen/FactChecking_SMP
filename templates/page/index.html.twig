{% extends 'base.html.twig' %}

{% block title %}Hello PageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 3em auto; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="row my-2">
        <div class="col-4 rounded border p-3">
            <div class="p-3">
                <p>filters </p>
            <ul>
                <li>list item</li>
                <li>list item</li>
                <li>list item</li>
            </ul>
            </div>
        </div>
        <div class="col-8">
            {% for post in posts %}
                <div class="border rounded mb-2">
                    <div class="p-3 border-bottom border">
                        <p class="h5 m-0">
                            {{ post.author }}
                        </p>
                    </div>
                    <div class="py-1 px-3">
                        <p class="h2">
                            {{ post.title }}
                        </p>
                    </div>
                    <div class="pb-2 px-3">
                        <p class="h6">
                            {{ post.text }}
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
